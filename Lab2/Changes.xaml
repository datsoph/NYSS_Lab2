<Window x:Class="Lab2.Changes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2"
        mc:Ignorable="d"
        Title="Changes" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <DataGrid Name="beforeGrid" Margin="10,40,10,10" AutoGeneratingColumn="Grid_AutoGeneratingColumn" Grid.Column="0"/>
        <DataGrid Name="afterGrid" Margin="10,40,10,10" AutoGeneratingColumn="Grid_AutoGeneratingColumn" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Center" Margin="148,10,148,0" TextWrapping="Wrap" TextAlignment="Center" Text="Before" FontSize="20" VerticalAlignment="Top" Height="25" Width="100" Grid.Column="0"/>
        <TextBlock HorizontalAlignment="Center" Margin="148,10,148,0" TextWrapping="Wrap" TextAlignment="Center" Text="After" FontSize="20" VerticalAlignment="Top" Height="25" Width="100" Grid.Column="1"/>
    </Grid>
</Window>
